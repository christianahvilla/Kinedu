<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/detailed_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10sp"
        android:background="@color/shareBlue">

    <TextView
            android:id="@+id/detailed_title"
            android:layout_width="@dimen/dimen_0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/dimen_20sp"
            android:layout_gravity="center_vertical"/>

    <ImageView
            android:id="@+id/detailed_icon"
            android:layout_width="@dimen/dimen_48sp"
            android:layout_height="@dimen/dimen_48sp"
            android:src="@drawable/ic_share_white_24dp"/>

</LinearLayout>