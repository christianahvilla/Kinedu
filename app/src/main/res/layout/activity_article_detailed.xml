<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.article.detailed.DetailedActivity"
        android:scrollbars="vertical" >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <include layout="@layout/progress_bar"/>

        <ImageView
                android:id="@+id/detailed_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_250sp"/>

        <include
                layout="@layout/layout_share"
                android:layout_below="@+id/detailed_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>


        <TextView
                android:id="@+id/detailed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20sp"
                android:layout_below="@+id/detailed_share"
                android:padding="@dimen/dimen_25sp"
                android:autoLink="all"
                android:textColorLink="@color/linkColor"/>

    </RelativeLayout>


</ScrollView>